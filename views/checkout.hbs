<div class="row justify-content-md-center">
  <div class="col-6">
    <div class="text-center mt-40">
      <h1>
        Checkout â€” Stripe Press
      </h1>
      <h5 class="text-secondary">
        {{title}}
      </h5>
      <hr class="mt-40" />
      <div class="mt-20 text-info">
        Total due: $<span class="amount" data-amount="{{amount}}"></span>
      </div>
    </div>
    <div class="card box-shadow mt-40">
      <div class="card-body">
        <form id="payment-form">
          <div>
            <label for="email">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="you@email.com"
            />
          </div>
           {{!Jill: doc script expects id="email-errors"}}
          <div id="email-errors" style="color:red;"></div>
          <div class="mt-20 text-center text-secondary border-placeholder">
            {{!Jill: Add Stripe element here: START}}
            <input type="hidden" id="itemId" value="{{item}}" />
            <div id="payment-element"></div>
            <div id="payment-message" class="hidden"></div>
          </div>
          <div class="mt-20">
            <button
              id="submit"
              type="submit"
              class="btn btn-lg btn-block btn-primary">
              <span id="button-text">
                Pay $<span class="amount" data-amount="{{amount}}"></span>
              </span>
            </button>
            {{!Jill: Add Stripe element here: END}}
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{!Jill: Load stripe.js}}
<script src="https://js.stripe.com/basil/stripe.js"></script>
<script src="/js/checkout.js" defer></script>